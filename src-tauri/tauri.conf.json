{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstraPulse",
  "version": "1.0.0",
  "identifier": "com.chrisrollet.astrapulse",
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AstraPulse",
        "titleBarStyle": "Transparent",
        "minWidth": 500,
        "minHeight": 850,
        "maxHeight": 850,
        "maxWidth": 500,
        "resizable": true,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/AstraPulse.icns",
      "icons/AstraPulse.ico"
    ],
    "shortDescription": "AstraPulse — a small Pomodoro-style timer",
    "longDescription": "AstraPulse is a lightweight Pomodoro-style timer built with Svelte and Tauri. It supports notifications, sound, and configurable presets to help you focus.",
    "resources": ["README.md"],
    "copyright": "© 2025 Chris Dedman",
    "license": "MIT",
    "macOS": {
      "minimumSystemVersion": "10.14",
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true,
      "signingIdentity": null
    },
    "windows": {
      "digestAlgorithm": "sha256"
    }
  }
}